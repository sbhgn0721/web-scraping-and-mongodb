{{> navs/index}}

<div class="jumbotron">
    <div class="row">
        <div class="col-md-12">
            <h1>{{this.title}}</h1>
            <h3>{{this.subtitle}}</h3>
        </div>
    </div>
</div>

<div id="articles">
    {{#if articles}}
    {{#each articles}}
    <div class="card">
        <div class="row">
            <div class="col col-md-8">
                <h5 class="card-header"><a href="{{this.link}}">{{this.title}}</a></h5>
            </div>
            <div class="col col-md-2">
                <form class="form-inline" action="/api/articles/save/{{this.id}}" method="POST">
                    <button type="submit" class="btn btn-success">SAVE ARTICLE</button>
                </form>
            </div>
        </div>
        <div class="card-body">
            <p class="card-text">{{this.excerpt}}</p>
        </div>
    </div>

    {{/each}}
   
  

   {{else}}
    <div class="card">
        <div class="card-body">
            Uh Oh. Looks like we don't have any saved articles.
        </div>
    </div>
    <div class="card text-center">
        <div class="card-header">
            Would You Like to Browse Available Articles?
        </div>
        <div class="card-body">
            <p class="card-text text-center"><a href="/scrape">Try Scraping New Articles</a></p>
            <p class="card-text text-center"><a href="/saved">Go to Saved Articles</a></p>

        </div>
    </div>
 
     {{/if}}
</div>